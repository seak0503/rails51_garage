<% @title = 'ログイン' %>

<%= content_tag(:span, flash.notice, class: 'notice message-area-notice') if flash.notice %>
<%= content_tag(:span, flash.alert, class: 'alert message-area-alert') if flash.alert %>

<%= form_for @form, url: :staff_session, html: { class: "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Name', class: 'basic-label' %>
    <%= f.text_field :name, { class: 'form-control col-xs-12' } %>
    <div class="bois-error-area">
      <span class="error-span col-xs-12"></span>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, 'パスワード', class: 'basic-label' %>
    <%= f.password_field :password, { class: 'form-control col-xs-12' } %>
    <div class="bois-error-area">
      <span class="error-span col-xs-12"></span>
    </div>
  </div>
  <br />
  <div class="form-group">
    <%= f.submit 'ログイン', class: "btn btn-danger col-xs-12" %>
  </div>
<% end %>
